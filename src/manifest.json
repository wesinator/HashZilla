{
  "manifest_version": 2,
  "name": "HashZilla",
  "description": "Hash selected text and pages in the browser.",
  "homepage_url": "https://github.com/wesinator/hashzilla",
  "default_locale": "en",
  "version": "0.2.0",
  "icons": {
    "64": "icons/icon.png"
  },

  "permissions": [
    "contextMenus",
    "activeTab"
  ],
  "browser_specific_settings": {
      "gecko": {
          "id": "hashzilla@wesinator.github.com",
          "strict_max_version": "109.*"
      }
  },

  "background": {
   "scripts": ["background.js", "hash.js", "./include/crypto-api.min.js"]
  }

  //"browser_action": {
    //"default_icon": {
      //"64": "icons/icon.png"
    //},
    //"default_popup": "browserAction/index.html",
    //"default_title": "HashZilla"
  //}

}
