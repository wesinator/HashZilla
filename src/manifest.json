{
  "manifest_version": 3,
  "name": "HashZilla",
  "description": "Hash selected text in the browser.",
  "homepage_url": "https://github.com/wesinator/hashzilla",
  "default_locale": "en",
  "version": "0.3.2",
  "icons": {
    "64": "icons/icon.png"
  },
  "host_permissions": [
      "<all_urls>"
  ],
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "browser_specific_settings": {
      "gecko": {
          "id": "{0da3d4d4-91e1-4ccd-ba19-4e57c36d289b}"
      }
  },

  "background": {
    "scripts": ["background.js", "hash.js", "./include/crypto-api.min.js"]
  }
}
